@using Microsoft.AspNetCore.Http

@{
    var nombre = Context.Session.GetString("UsuarioNombre");
    var tipo = Context.Session.GetString("UsuarioTipo");
    var sedeNombre = Context.Session.GetString("SedeNombre");
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LMS</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LMS.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <!-- LOGO / MARCA -->
                <a class="navbar-brand fw-semibold d-flex align-items-center gap-2"
                   asp-controller="Alumno"
                   asp-action="Index">

                    <img src="~/images/logo.jpeg"
                         alt="Logo"
                         style="height:40px; width:auto;" />

                    <span>LMS</span>
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <!-- Menú izquierdo -->
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark"
                               asp-controller="Alumno"
                               asp-action="Index">
                                Mis Cursos
                            </a>
                        </li>
                    </ul>

                    <!-- Menú derecho (solo si hay sesión) -->
                    @if (!string.IsNullOrEmpty(nombre))
                    {
                        <ul class="navbar-nav align-items-center">

                            <li class="nav-item me-3">
                                <span class="nav-link text-dark">
                                    👤 @nombre
                                </span>
                            </li>

                            @if (!string.IsNullOrEmpty(sedeNombre))
                            {
                                <li class="nav-item me-3">
                                    <span class="nav-link text-dark">
                                        🏫 @sedeNombre
                                    </span>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="btn btn-outline-danger btn-sm"
                                   asp-controller="Auth"
                                   asp-action="Logout">
                                    Cerrar sesión
                                </a>
                            </li>

                        </ul>
                    }

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - LMS
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>