@{
    ViewData["Title"] = "Bienvenido";
}

<div class="container mt-5">

    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold">Cursos Funda Vida</h1>
        <p class="text-muted">Seleccione el tipo de usuario para continuar</p>
    </div>

    <div class="row justify-content-center">

        <!-- Profesor -->
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm text-center h-100">
                <div class="card-body d-flex flex-column justify-content-center">

                    <h4 class="mb-3">👨‍🏫 Profesor</h4>

                    <a asp-controller="Auth"
                       asp-action="ProfesorLogin"
                       class="btn btn-primary">
                        Ingresar como Profesor
                    </a>

                </div>
            </div>
        </div>

        <!-- Estudiante -->
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm text-center h-100">
                <div class="card-body d-flex flex-column justify-content-center">

                    <h4 class="mb-3">👨‍🎓 Estudiante</h4>

                    <a asp-controller="Auth"
                       asp-action="EstudianteLogin"
                       class="btn btn-success">
                        Ingresar como Estudiante
                    </a>

                </div>
            </div>
        </div>

    </div>
</div>
