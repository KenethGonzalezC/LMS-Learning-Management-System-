@model List<LMS.Models.Entidades.ResultadoModulo>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var modulo = ViewBag.Modulo;
    var curso = ViewBag.Curso;
}

<div class="container mt-4">
    <h2>Resultados - Módulo: @modulo.Titulo</h2>
    <h4 class="mb-4">Curso: @curso.Nombre</h4>

    <a asp-controller="Profesor"
       asp-action="Detalle"
       asp-route-id="@curso.CursoId"
       class="btn btn-secondary btn-sm mb-3">
        ← Volver al Curso
    </a>
   
    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No hay resultados registrados para este módulo.
        </div>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Cédula</th>
                    <th>Nombre del estudiante</th>
                    <th>Nota obtenida</th>
                    <th>Aprobado</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var r = Model[i];
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@r.Estudiante.Cedula</td>
                        <td>@r.Estudiante.Nombre</td>
                        <td>@r.NotaObtenida %</td>
                        <td>
                            @if (r.Aprobado)
                            {
                                <span class="badge bg-success">Sí</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">No</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>