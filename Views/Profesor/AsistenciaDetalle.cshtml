@model (LMS.Models.Entidades.Estudiante estudiante, List<LMS.Models.Entidades.Asistencia> asistencias)

@{
    ViewData["Title"] = "Detalle de Asistencia";
}

<div class="container mt-4">

    <h2>Historial de Asistencia</h2>
    <h4>@Model.estudiante.Nombre</h4>
    <p><strong>Cédula:</strong> @Model.estudiante.Cedula</p>
    <p><strong>Curso:</strong> @ViewBag.NombreCurso</p>

    <a asp-action="Asistencia"
       asp-route-cursoId="@ViewBag.CursoId"
       class="btn btn-secondary btn-sm mb-3">
        ← Volver
    </a>

    @if (!Model.asistencias.Any())
    {
        <div class="alert alert-warning">
            No hay registros de asistencia.
        </div>
    }
    else
    {
        <table class="table table-bordered table-striped shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Fecha</th>
                    <th>Hora</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var asistencia in Model.asistencias)
                {
                    <tr>
                        <td>@asistencia.FechaHora.ToString("dd/MM/yyyy")</td>
                        <td>@asistencia.FechaHora.ToString("HH:mm:ss")</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="mt-3">
            <strong>Total asistencias:</strong> @Model.asistencias.Count
        </div>
    }

</div>