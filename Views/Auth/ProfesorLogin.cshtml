@model LMS.Models.ViewModels.ProfesorLoginViewModel

@{
    ViewData["Title"] = "Login Profesor";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-sm p-4" style="width: 400px;">
        <div class="text-center mb-4">
            <img src="~/images/logo.jpeg" alt="Logo" style="height:60px;" class="mb-2" />
            <h3>Ingreso Profesor</h3>
            <p class="text-muted">Accede a tus cursos y módulos</p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">
                @ViewBag.Error
            </div>
        }

        <form asp-action="ProfesorLogin" method="post">
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label">Usuario</label>
                <input asp-for="Nombre" class="form-control" placeholder="Ingresa tu usuario" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Passwd" class="form-label">Contraseña</label>
                <input asp-for="Passwd" type="password" class="form-control" placeholder="Ingresa tu contraseña" />
                <span asp-validation-for="Passwd" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SedeId" class="form-label">Sede</label>
                <select asp-for="SedeId"
                        asp-items="@(new SelectList(Model.Sedes, "Id", "Nombre"))"
                        class="form-select">
                    <option value="">-- Seleccione una sede --</option>
                </select>
                <span asp-validation-for="SedeId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Ingresar</button>
        </form>

        <div class="mt-3 text-center">
            <a asp-controller="Auth" asp-action="CoordinadorLogin" class="text-primary text-decoration-none">
                ¿Eres Coordinador? Inicia sesión aquí
            </a>
        </div>

        <div class="mt-2 text-center">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary w-100">
                Volver
            </a>
        </div>
    </div>
</div>