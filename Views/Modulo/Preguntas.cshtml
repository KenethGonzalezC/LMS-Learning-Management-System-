@model List<LMS.Models.Entidades.Pregunta>

@{
    ViewData["Title"] = "Preguntas del Módulo";
}

<div class="container mt-4">

    <h3>Preguntas del módulo: @ViewBag.TituloModulo</h3>

    <div class="alert alert-info">
        Preguntas creadas: @ViewBag.CantidadActual / @ViewBag.CantidadRequerida
    </div>

    <hr />

    @* =========================
       FORMULARIO PARA AGREGAR PREGUNTA
       ========================= *@
    @if (ViewBag.CantidadActual < ViewBag.CantidadRequerida)
    {
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <form asp-controller="Modulo"
                      asp-action="CrearPregunta"
                      method="post">

                    <input type="hidden" name="ModuloId" value="@ViewBag.ModuloId" />

                    <div class="mb-3">
                        <label class="form-label">Enunciado</label>
                        <input name="Enunciado" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Opción A</label>
                        <input name="OpcionA" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Opción B</label>
                        <input name="OpcionB" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Opción C</label>
                        <input name="OpcionC" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Opción D</label>
                        <input name="OpcionD" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Respuesta Correcta</label>
                        <select name="RespuestaCorrecta" class="form-select" required>
                            <option value="">Seleccione</option>
                            <option value="A">A</option>
                            <option value="B">B</option>
                            <option value="C">C</option>
                            <option value="D">D</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-success">
                        Agregar Pregunta
                    </button>
                </form>
            </div>
        </div>
    }

    @* =========================
       MENSAJE CUANDO YA SE CUMPLIÓ LA CANTIDAD
       ========================= *@
    @if (ViewBag.CantidadActual == ViewBag.CantidadRequerida)
    {
        <div class="alert alert-success">
            El módulo ya tiene la cantidad requerida de preguntas.
        </div>

        <a asp-controller="Modulo"
           asp-action="Preview"
           asp-route-id="@ViewBag.ModuloId"
           class="btn btn-primary mb-4">
            Finalizar y Ver Vista Previa
        </a>
    }

    @* =========================
       LISTADO DE PREGUNTAS AGREGADAS
       ========================= *@
    @if (Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <strong>Preguntas agregadas</strong>
            </div>
            <ul class="list-group list-group-flush">
                @foreach (var pregunta in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>@pregunta.Enunciado</span>
                        <span class="badge bg-secondary">
                            Correcta: @pregunta.RespuestaCorrecta
                        </span>
                    </li>
                }
            </ul>
        </div>
    }

</div>
